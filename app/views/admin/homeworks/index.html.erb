<% content_for :title, "作业管理" %>

<div class="container-xl">
  <!-- Page Title and Filters -->
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mb-4">作业管理</h1>
    
    <!-- Filter Bar -->
    <div class="flex flex-wrap gap-4 items-center">
      <%= form_with url: admin_homeworks_path, method: :get, class: "flex flex-wrap gap-4 items-center" do |f| %>
        <div>
          <label class="text-sm text-gray-600 dark:text-gray-400 mb-1 block">状态筛选</label>
          <%= f.select :status, 
              options_for_select([['全部', ''], ['已提交', 'submitted'], ['已审阅', 'reviewed'], ['已点赞', 'liked']], params[:status]),
              {},
              class: "form-input" %>
        </div>
        
        <div>
          <label class="text-sm text-gray-600 dark:text-gray-400 mb-1 block">课程筛选</label>
          <%= f.select :course_id,
              options_for_select([['全部课程', '']] + Course.pluck(:name, :id), params[:course_id]),
              {},
              class: "form-input" %>
        </div>
        
        <div class="flex items-end">
          <%= f.submit "筛选", class: "btn-primary" %>
          <%= link_to "重置", admin_homeworks_path, class: "btn-ghost ml-2" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Homeworks Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @homeworks.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">学员</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">课程/章节/课时</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">作业内容</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">状态</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">提交时间</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @homeworks.each do |homework| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <div class="flex items-center">
                      <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white text-xs font-bold mr-3">
                        <%= homework.user.email.first.upcase %>
                      </div>
                      <div>
                        <div class="font-medium"><%= homework.user.email.split('@').first %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-900 dark:text-gray-100">
                    <div class="flex flex-col">
                      <div class="font-medium text-primary"><%= homework.lesson.course.name %></div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">
                        <%= homework.lesson.chapter.name %> / <%= homework.lesson.name %>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 max-w-md text-sm text-gray-900 dark:text-gray-100">
                    <%= link_to truncate(homework.content, length: 80), admin_homework_path(homework), class: "hover:text-primary transition-colors" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <% if homework.liked? %>
                      <span class="badge badge-success flex items-center gap-1">
                        <%= lucide_icon "heart", class: "w-3 h-3" %>
                        已点赞
                      </span>
                    <% elsif homework.status == 'reviewed' %>
                      <span class="badge badge-info">已审阅</span>
                    <% else %>
                      <span class="badge badge-warning">待审阅</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 dark:text-gray-400">
                    <%= homework.created_at.strftime("%Y-%m-%d %H:%M") %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_homework_path(homework), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors", title: "查看详情" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      
                      <% unless homework.liked? %>
                        <%= link_to like_admin_homework_path(homework), method: :post, 
                            class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors",
                            title: "点赞" do %>
                          <%= lucide_icon "heart", class: "w-4 h-4" %>
                        <% end %>
                      <% end %>
                      
                      <%= link_to admin_homework_path(homework), method: :delete,
                          data: { confirm: "确定删除这个作业吗?" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors",
                          title: "删除" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">暂无作业</h3>
          <p class="text-gray-500 dark:text-gray-400">学员提交作业后会显示在这里</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @homeworks.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @homeworks %>
    </div>
  <% end %>
</div>
