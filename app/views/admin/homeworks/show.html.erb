<% content_for :title, "作业详情" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_homeworks_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        返回作业列表
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">作业详情</h1>

      <div class="flex items-center space-x-3">
        <% unless @homework.liked? %>
          <%= link_to like_admin_homework_path(@homework), method: :post, class: "btn-primary" do %>
            <%= lucide_icon "heart", class: "w-5 h-5 mr-2" %>
            点赞
          <% end %>
        <% else %>
          <span class="btn-success cursor-not-allowed" disabled>
            <%= lucide_icon "heart", class: "w-5 h-5 mr-2 fill-current" %>
            已点赞
          </span>
        <% end %>

        <%= link_to admin_homework_path(@homework),
            method: :delete,
            data: { confirm: "确定删除这个作业吗?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          删除
        <% end %>
      </div>
    </div>
  </div>

  <!-- Student Info Card -->
  <div class="card bg-gradient-to-br from-primary/5 to-secondary/5 border border-primary/20 dark:border-primary/30 mb-6">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <div class="w-16 h-16 rounded-full bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-white text-2xl font-bold mr-4">
            <%= @homework.user.email.first.upcase %>
          </div>
          <div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100"><%= @homework.user.email.split('@').first %></h3>
            <p class="text-sm text-gray-600 dark:text-gray-400"><%= @homework.user.email %></p>
          </div>
        </div>
        
        <div class="text-right">
          <div class="text-sm text-gray-600 dark:text-gray-400">提交时间</div>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
            <%= @homework.created_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
          <div class="text-xs text-gray-500 dark:text-gray-400">
            <%= time_ago_in_words(@homework.created_at) %>前
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Course & Lesson Info -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-body">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
            <%= lucide_icon "book-open", class: "w-4 h-4" %>
            课程
          </label>
          <div class="text-lg font-medium text-primary">
            <%= @homework.lesson.course.name %>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
            <%= lucide_icon "layers", class: "w-4 h-4" %>
            章节
          </label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
            <%= @homework.lesson.chapter.name %>
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 flex items-center gap-2">
            <%= lucide_icon "file-text", class: "w-4 h-4" %>
            课时
          </label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
            <%= @homework.lesson.name %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Homework Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700 mb-6">
    <div class="card-header border-b border-gray-200 dark:border-gray-700">
      <h2 class="text-xl font-bold text-gray-900 dark:text-gray-50 flex items-center gap-2">
        <%= lucide_icon "edit-3", class: "w-5 h-5" %>
        作业内容
      </h2>
    </div>
    <div class="card-body">
      <div class="prose prose-gray dark:prose-invert max-w-none">
        <%= simple_format(@homework.content) %>
      </div>
    </div>
  </div>

  <!-- Status Card -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="flex items-center justify-between">
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">当前状态</label>
          <div>
            <% if @homework.liked? %>
              <span class="badge badge-success text-lg px-4 py-2">
                <%= lucide_icon "heart", class: "w-5 h-5 mr-2 fill-current inline" %>
                已点赞
              </span>
            <% elsif @homework.status == 'reviewed' %>
              <span class="badge badge-info text-lg px-4 py-2">
                <%= lucide_icon "check-circle", class: "w-5 h-5 mr-2 inline" %>
                已审阅
              </span>
            <% else %>
              <span class="badge badge-warning text-lg px-4 py-2">
                <%= lucide_icon "clock", class: "w-5 h-5 mr-2 inline" %>
                待审阅
              </span>
            <% end %>
          </div>
        </div>
        
        <% if @homework.liked? %>
          <div class="text-right">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">点赞时间</label>
            <div class="text-lg font-medium text-gray-900 dark:text-gray-100">
              <%= @homework.liked_at.strftime("%Y-%m-%d %H:%M") %>
            </div>
            <div class="text-xs text-gray-500 dark:text-gray-400">
              <%= time_ago_in_words(@homework.liked_at) %>前
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
