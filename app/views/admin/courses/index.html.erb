<% content_for :title, "Courses" %>

<div class="container-xl">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">课程管理</h1>
    <%= link_to new_admin_course_path, class: "btn-primary" do %>
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      新建课程
    <% end %>
  </div>

  <!-- Courses Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @courses.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">课程名称</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">价格</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">状态</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @courses.each do |course| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100"><%= course.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 dark:text-gray-100">
                    <%= link_to course.name, admin_course_path(course.id), class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" %>
                    <div class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= course.slug %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <% if course.early_bird_price.present? %>
                      <div class="space-y-1">
                        <div class="text-xs text-gray-500 dark:text-gray-400 line-through">原价 ¥<%= sprintf('%.0f', course.original_price) %></div>
                        <div class="text-sm">现价 ¥<%= sprintf('%.0f', course.current_price) %></div>
                        <div class="text-sm font-bold text-yellow-600 dark:text-yellow-400">早鸟 ¥<%= sprintf('%.0f', course.early_bird_price) %></div>
                      </div>
                    <% else %>
                      <div class="text-sm">¥<%= sprintf('%.0f', course.annual_price) %></div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <span class="badge badge-<%= course.status == 'active' ? 'success' : 'secondary' %>">
                      <%= course.status == 'active' ? '上线' : '下线' %>
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_course_path(course.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to edit_admin_course_path(course.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "pencil", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to admin_course_path(course.id), method: :delete,
                          data: { confirm: "确定要删除这个课程吗？" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">暂无课程</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">开始创建您的第一个课程</p>
          <%= link_to new_admin_course_path, class: "btn-primary" do %>
            <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
            New Course
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @courses.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @courses %>
    </div>
  <% end %>
</div>