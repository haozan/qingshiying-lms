<% content_for :title, "Offline bookings" %>

<div class="container-xl">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">预约管理</h1>
    <%= link_to new_admin_offline_booking_path, class: "btn-primary" do %>
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      新增预约
    <% end %>
  </div>

  <!-- Offline bookings Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @offline_bookings.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">用户</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">预约日期</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">时间段</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">地点</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">状态</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @offline_bookings.each do |offline_booking| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100"><%= offline_booking.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_booking.user&.name || offline_booking.user&.email %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_booking.offline_schedule&.schedule_date&.strftime('%Y年%m月%d日') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_booking.offline_schedule&.schedule_time %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_booking.offline_schedule&.location %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm">
                    <% if offline_booking.status == 'confirmed' %>
                      <span class="badge badge-success">已确认</span>
                    <% elsif offline_booking.status == 'cancelled' %>
                      <span class="badge badge-gray">已取消</span>
                    <% elsif offline_booking.status == 'no_show' %>
                      <span class="badge badge-error">爽约</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_offline_booking_path(offline_booking.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      <% if offline_booking.status == 'confirmed' %>
                        <%= link_to mark_no_show_admin_offline_booking_path(offline_booking), method: :post,
                            data: { confirm: "确定要标记该用户爽约吗？" },
                            class: "p-2 text-orange-600 dark:text-orange-400 hover:text-orange-800 dark:hover:text-orange-300 hover:bg-orange-100 dark:hover:bg-orange-900 rounded transition-colors" do %>
                          <%= lucide_icon "user-x", class: "w-4 h-4" %>
                        <% end %>
                      <% end %>
                      <%= link_to admin_offline_booking_path(offline_booking.id), method: :delete,
                          data: { confirm: "确定要删除该预约吗？" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">No offline_bookings</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">Get started by creating a new offline_booking.</p>
          <%= link_to new_admin_offline_booking_path, class: "btn-primary" do %>
            <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
            New Offline booking
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @offline_bookings.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @offline_bookings %>
    </div>
  <% end %>
</div>