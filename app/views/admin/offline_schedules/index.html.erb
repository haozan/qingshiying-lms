<% content_for :title, "Offline schedules" %>

<div class="container-xl">
  <!-- Page Title and Actions -->
  <div class="flex items-center justify-between mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50">Offline schedules Management</h1>
    <%= link_to new_admin_offline_schedule_path, class: "btn-primary" do %>
      <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
      New Offline schedule
    <% end %>
  </div>

  <!-- Offline schedules Table -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body p-0">
      <% if @offline_schedules.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-800">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">状态</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">预约日期</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">时间段</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">地点</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">最大人数</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">已预约</th>
                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">操作</th>
              </tr>
            </thead>
            <tbody class="bg-gray-50 dark:bg-gray-900 divide-y divide-gray-200 dark:divide-gray-700">
              <% @offline_schedules.each do |offline_schedule| %>
                <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition-colors">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900 dark:text-gray-100"><%= offline_schedule.id %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900 dark:text-gray-100">
                    <% if offline_schedule.status == 'available' %>
                      <span class="badge badge-success">可预约</span>
                    <% elsif offline_schedule.status == 'full' %>
                      <span class="badge badge-gray">已满员</span>
                    <% else %>
                      <span class="badge badge-warning">已取消</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_schedule.schedule_date&.strftime('%Y-%m-%d') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_schedule.schedule_time %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_schedule.location %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_schedule.max_attendees %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 dark:text-gray-100">
                    <%= offline_schedule.current_attendees %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                    <div class="flex justify-center space-x-2">
                      <%= link_to admin_offline_schedule_path(offline_schedule.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "eye", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to edit_admin_offline_schedule_path(offline_schedule.id), class: "p-2 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-50 hover:bg-gray-100 dark:hover:bg-gray-700 rounded transition-colors" do %>
                        <%= lucide_icon "pencil", class: "w-4 h-4" %>
                      <% end %>
                      <%= link_to admin_offline_schedule_path(offline_schedule.id), method: :delete,
                          data: { confirm: "Are you sure you want to delete this offline_schedule?" },
                          class: "p-2 text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300 hover:bg-red-100 dark:hover:bg-red-900 rounded transition-colors" do %>
                        <%= lucide_icon "trash-2", class: "w-4 h-4" %>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-12">
          <div class="w-24 h-24 mx-auto mb-4 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center">
            <%= lucide_icon "file-text", class: "w-12 h-12 text-gray-400" %>
          </div>
          <h3 class="text-lg font-medium text-gray-900 dark:text-gray-50 mb-2">No offline_schedules</h3>
          <p class="text-gray-500 dark:text-gray-400 mb-6">Get started by creating a new offline_schedule.</p>
          <%= link_to new_admin_offline_schedule_path, class: "btn-primary" do %>
            <%= lucide_icon "plus", class: "w-5 h-5 mr-2" %>
            New Offline schedule
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Pagination -->
  <% if @offline_schedules.respond_to?(:current_page) %>
    <div class="mt-6">
      <%= paginate @offline_schedules %>
    </div>
  <% end %>
</div>