<% content_for :title, "New Offline schedule" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_offline_schedules_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Offline schedules
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Offline schedule</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @offline_schedule], local: true, class: "space-y-6" do |form| %>
        <!-- Schedule date -->
        <div class="form-group">
          <%= form.label :schedule_date, "预约日期" %>
          <%= form.date_field :schedule_date, placeholder: "选择预约日期..." %>
        </div>

        <!-- Schedule time -->
        <div class="form-group">
          <%= form.label :schedule_time, "预约时间段" %>
          <%= form.text_field :schedule_time, placeholder: "例如: 14:00-16:00" %>
        </div>

        <!-- Location -->
        <div class="form-group">
          <%= form.label :location, "预约地点" %>
          <%= form.text_field :location, placeholder: "输入预约地点..." %>
        </div>

        <!-- Max attendees -->
        <div class="form-group">
          <%= form.label :max_attendees, "最大参加人数" %>
          <%= form.number_field :max_attendees, placeholder: "输入最大参加人数...", value: @offline_schedule.max_attendees || 20 %>
        </div>

        <!-- Status -->
        <div class="form-group">
          <%= form.label :status, "状态" %>
          <%= form.select :status,
              options_for_select([['可预约', 'available'], ['已满员', 'full'], ['已取消', 'cancelled']], @offline_schedule.status || 'available') %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_offline_schedules_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Offline schedule", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>