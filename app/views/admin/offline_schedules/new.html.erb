<% content_for :title, "New Offline schedule" %>

<div class="container-md">
  <div class="flex items-center space-x-4">
    <%= link_to admin_offline_schedules_path, class: "btn-ghost text-sm py-1 px-3" do %>
      <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
      Back to Offline schedules
    <% end %>
  </div>

  <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50 mt-4 mb-8">Create New Offline schedule</h1>

  <!-- Form -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <%= form_with model: [:admin, @offline_schedule], local: true, class: "space-y-6" do |form| %>
        <!-- Schedule date -->
        <div class="form-group">
          <%= form.label :schedule_date %>
          <%= form.date_field :schedule_date, placeholder: "Select schedule date..." %>
        </div>

        <!-- Max attendees -->
        <div class="form-group">
          <%= form.label :max_attendees %>
          <%= form.number_field :max_attendees, placeholder: "Enter max attendees..." %>
        </div>

        <!-- Status -->
        <div class="form-group">
          <%= form.label :status %>
          <%= form.text_field :status, placeholder: "Enter status..." %>
        </div>

        <!-- Course -->
        <div class="form-group">
          <%= form.label :course_id, "Course" %>
          <%= form.select :course_id,
              options_for_select([['Select Course', '']] + Course.all.map { |item| [item.name, item.id] }, @offline_schedule.course_id) %>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-end space-x-3">
          <%= link_to admin_offline_schedules_path, class: "btn-ghost" do %>
            Cancel
          <% end %>
          <%= form.submit "Create Offline schedule", class: "btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>