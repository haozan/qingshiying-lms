<% content_for :title, @product.respond_to?(:name) ? @product.name : "Product" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_products_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Products
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @product.respond_to?(:name) ? @product.name : "Product ##{@product.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_product_path(@product.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_product_path(@product.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this product?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Product Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Title</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.title %></div>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subtitle</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.subtitle %></div>
        </div>

        <!-- Link URL -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Link URL</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100 break-all">
            <% if @product.link_url.present? %>
              <a href="<%= @product.link_url %>" target="_blank" rel="noopener noreferrer" class="text-blue-600 dark:text-blue-400 hover:underline">
                <%= @product.link_url %>
                <%= lucide_icon "external-link", class: "w-4 h-4 inline ml-1" %>
              </a>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500 italic">No link URL</span>
            <% end %>
          </div>
        </div>

        <!-- Og url -->
        <div>
          <div class="flex items-center justify-between mb-2">
            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">OG Image URL</label>
            <% if @product.link_url.present? %>
              <%= button_to refresh_og_image_admin_product_path(@product), 
                  method: :post,
                  form: { data: { turbo_confirm: "确定要重新抓取 OG 图片吗？当前的 og_url 将被覆盖。" } },
                  class: "btn-sm btn-secondary inline-flex items-center" do %>
                <%= lucide_icon "refresh-cw", class: "w-4 h-4 mr-1" %>
                更新 OG 图
              <% end %>
            <% end %>
          </div>
          <div class="text-sm text-gray-900 dark:text-gray-100 break-all mb-2">
            <% if @product.og_url.present? %>
              <%= @product.og_url %>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500 italic">No OG image URL</span>
            <% end %>
          </div>
          <% if @product.og_url.present? %>
            <div class="mt-2">
              <img src="<%= @product.og_url %>" 
                   alt="OG Image Preview" 
                   class="max-w-md rounded border border-gray-300 dark:border-gray-600"
                   onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <div class="text-sm text-red-600 dark:text-red-400 hidden">⚠️ 图片加载失败</div>
            </div>
          <% end %>
        </div>

        <!-- Cover image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Manual Cover Image URL</label>
          <div class="text-sm text-gray-900 dark:text-gray-100 break-all mb-2">
            <% if @product.cover_image_url.present? %>
              <%= @product.cover_image_url %>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500 italic">No manual cover image URL</span>
            <% end %>
          </div>
          <% if @product.cover_image_url.present? %>
            <div class="mt-2">
              <img src="<%= @product.cover_image_url %>" 
                   alt="Manual Cover Image Preview" 
                   class="max-w-md rounded border border-gray-300 dark:border-gray-600"
                   onerror="this.style.display='none'; this.nextElementSibling.style.display='block';">
              <div class="text-sm text-red-600 dark:text-red-400 hidden">⚠️ 图片加载失败</div>
            </div>
          <% end %>
        </div>

        <!-- Actual Cover URL Used -->
        <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-800">
          <label class="block text-sm font-medium text-blue-700 dark:text-blue-300 mb-2">
            <%= lucide_icon "image", class: "w-4 h-4 inline mr-1" %>
            当前使用的封面图
          </label>
          <div class="text-sm text-blue-900 dark:text-blue-100">
            优先级：OG Image URL > Manual Cover Image URL
          </div>
          <div class="text-sm text-blue-900 dark:text-blue-100 break-all mt-2 font-mono">
            <%= @product.cover_url || '无' %>
          </div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @product.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @product.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@product.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @product.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@product.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
