<% content_for :title, @product.respond_to?(:name) ? @product.name : "Product" %>

<div class="container-lg">
  <div class="mb-6">
    <div class="flex items-center space-x-4">
      <%= link_to admin_products_path, class: "btn-ghost text-sm py-1 px-3" do %>
        <%= lucide_icon "arrow-left", class: "w-4 h-4 mr-2" %>
        Back to Products
      <% end %>
    </div>

    <div class="mt-4 flex items-center justify-between">
      <h1 class="text-3xl font-bold text-gray-900 dark:text-gray-50"><%= @product.respond_to?(:name) ? @product.name : "Product ##{@product.id}" %></h1>

      <div class="flex items-center space-x-3">
        <%= link_to edit_admin_product_path(@product.id), class: "btn-primary" do %>
          <%= lucide_icon "pencil", class: "w-5 h-5 mr-2" %>
          Edit
        <% end %>

        <%= link_to admin_product_path(@product.id),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this product?" },
            class: "btn-danger" do %>
          <%= lucide_icon "trash-2", class: "w-5 h-5 mr-2" %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <!-- Product Content -->
  <div class="card bg-gray-50 dark:bg-gray-900 border border-gray-200 dark:border-gray-700">
    <div class="card-body">
      <div class="space-y-6">
        <!-- Title -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Title</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.title %></div>
        </div>

        <!-- Subtitle -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Subtitle</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.subtitle %></div>
        </div>

        <!-- Og url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Og url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.og_url %></div>
        </div>

        <!-- Cover image url -->
        <div>
          <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Cover image url</label>
          <div class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= @product.cover_image_url %></div>
        </div>

        <!-- Metadata -->
        <div class="pt-6 border-t border-gray-200 dark:border-gray-600">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">ID</label>
              <div class="text-sm text-gray-900 dark:text-gray-100 font-mono"><%= @product.id %></div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Created</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @product.created_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@product.created_at) %> ago)</span>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Last Updated</label>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                <%= @product.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
                <span class="text-gray-400">(<%= time_ago_in_words(@product.updated_at) %> ago)</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
