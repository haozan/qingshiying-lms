<div class="min-h-screen bg-surface">
  <!-- Hero Section -->
  <section class="py-16 bg-surface-elevated border-b border-border">
    <div class="container-xl mx-auto px-6">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-4xl sm:text-5xl font-light text-base-content mb-4">
          青狮出品
        </h1>
        <p class="text-lg text-base-content/70">
          探索我们的软件作品集
        </p>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="py-16">
    <div class="container-xl mx-auto px-6">
      <% if @products.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @products.each do |product| %>
            <% if product.link_url.present? %>
              <a href="<%= h(product.link_url) %>" target="_blank" rel="noopener noreferrer" class="block">
                <div class="card bg-base-100 border border-border hover:shadow-lg hover:border-primary/50 transition-all duration-300 cursor-pointer">
                  <!-- Cover Image -->
                  <% if product.cover_url.present? %>
                    <figure class="aspect-video bg-base-200">
                      <img 
                        src="<%= h(product.cover_url) %>" 
                        alt="<%= h(product.title) %>" 
                        class="w-full h-full object-cover"
                        loading="lazy"
                        referrerpolicy="no-referrer"
                      />
                    </figure>
                  <% else %>
                    <figure class="aspect-video bg-base-200 flex items-center justify-center">
                      <%= lucide_icon "image", class: "w-16 h-16 text-base-content/20" %>
                    </figure>
                  <% end %>

                  <!-- Card Content -->
                  <div class="card-body p-6">
                    <h2 class="card-title text-xl font-light text-base-content mb-2 line-clamp-1">
                      <%= product.title %>
                    </h2>
                    <p class="text-base-content/70 text-sm line-clamp-2 min-h-[2.5rem]">
                      <%= product.subtitle %>
                    </p>
                    <% status = product.launch_status %>
                    <% if status.present? %>
                      <div class="mt-3 pt-3 border-t border-border">
                        <% if status[:type] == :launched %>
                          <div class="badge badge-success gap-1 px-3 py-2">
                            <%= lucide_icon "check-circle", class: "w-4 h-4" %>
                            <span class="font-medium"><%= status[:days] %>天稳定运行</span>
                          </div>
                        <% elsif status[:type] == :testing %>
                          <div class="badge badge-neutral gap-1 px-3 py-2">
                            <%= lucide_icon "flask-conical", class: "w-4 h-4" %>
                            <span class="font-medium">测试中</span>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </a>
            <% else %>
              <div class="card bg-base-100 border border-border hover:shadow-lg transition-shadow duration-300">
                <!-- Cover Image -->
                <% if product.cover_url.present? %>
                  <figure class="aspect-video bg-base-200">
                    <img 
                      src="<%= h(product.cover_url) %>" 
                      alt="<%= h(product.title) %>" 
                      class="w-full h-full object-cover"
                      loading="lazy"
                      referrerpolicy="no-referrer"
                    />
                  </figure>
                <% else %>
                  <figure class="aspect-video bg-base-200 flex items-center justify-center">
                    <%= lucide_icon "image", class: "w-16 h-16 text-base-content/20" %>
                  </figure>
                <% end %>

                <!-- Card Content -->
                <div class="card-body p-6">
                  <h2 class="card-title text-xl font-light text-base-content mb-2 line-clamp-1">
                    <%= product.title %>
                  </h2>
                  <p class="text-base-content/70 text-sm line-clamp-2 min-h-[2.5rem]">
                    <%= product.subtitle %>
                  </p>
                  <% status = product.launch_status %>
                  <% if status.present? %>
                    <div class="mt-3 pt-3 border-t border-border">
                      <% if status[:type] == :launched %>
                        <div class="badge badge-success gap-1 px-3 py-2">
                          <%= lucide_icon "check-circle", class: "w-4 h-4" %>
                          <span class="font-medium"><%= status[:days] %>天稳定运行</span>
                        </div>
                      <% elsif status[:type] == :testing %>
                        <div class="badge badge-neutral gap-1 px-3 py-2">
                          <%= lucide_icon "flask-conical", class: "w-4 h-4" %>
                          <span class="font-medium">测试中</span>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-16">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-base-200 mb-4">
            <%= lucide_icon "package", class: "w-10 h-10 text-base-content/30" %>
          </div>
          <p class="text-lg text-base-content/70">
            暂无作品
          </p>
        </div>
      <% end %>
    </div>
  </section>
</div>
